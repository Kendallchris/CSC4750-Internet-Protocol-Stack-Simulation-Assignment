{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gcc Custom Build and Run",
            "type":"shell",
            "command": "g++",
            "args": [
                "custom_interfaces/layerinterface.h",
                "layers/application.cpp",
                "layers/link.cpp",
                "layers/network.cpp",
                "layers/transport.cpp",
                "main.cpp",
                "-Wall",
                "-g",
                "-std=c++14",
                "-O2",
                "-o",
                "NetworkSimulation"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label":"cl.exe build and run main.cpp",
            "type":"shell",
            "command": "cl.exe",
            "args": [
                ""
            ]
        },
        {
            "label": "Run Program",
            "dependsOn": ["gcc Custom Build and Run"],
            "command": "./NetworkSimulation",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]

}